<form caction="figures" method="post">
  <label for="figure_name">Figure Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  <br></br>

  <label>Title</label>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.name%>" value="<%=title.id%>"</input>
  <%end%>
  <br></br>

  <label>Create New Title</label>
  <input type="text" name="title[name]"></input>
  <br></br>

  <label>Landmarks</label>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name%>" value="<%=landmark.id%>"</input>
  <%end%>
  <br></br>

  <label>Create New Landmark</label>
  <input type="text" name="landmark[name]"></input>
  <br></br>

  <input type="submit" value="Create">


</form>
