<form action="/figures/<%= @figure.id %>" method="post">
  <label for="figure_name">Figure Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br></br>

  <label>Titles</label>  <br></br>
  <%Title.all.each do |title|%>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"
    <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
  <%end%>
  <br></br>

  <label>Create New Title</label>
  <input type="text" name="title[name]" id="new_title"></input>
  <br></br>

  <label>Landmarks</label>  <br></br>
    <% Landmark.all.each do |landmark| %>
       <label><%= landmark.name %></label>
       <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
     <% end %>

  <br></br>

  <label>Create New Landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <br></br>

  <input type="submit" value="Edit Figure">


</form>
